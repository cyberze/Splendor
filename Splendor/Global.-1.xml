<Defaults>
    <TableLayout class="ScoreTable"
 width="250"
 height="300"
 rectAlignment="UpperRight" offsetXY="-25 -50" cellSpacing="6" cellPadding="5 5 5 5" columnWidths="200 60"/>
    <Row class="ScoreTableRow" preferredHeight="40"/>
    <Text color="#FFFFFF" fontSize="16" />
</Defaults>

<Panel id="StartButton" width="800" height="280" rectAlignment="MiddleCenter" offsetXY="0 -400" hideAnimation="Shrink" visibility="Host">
<Text alignment="UpperCenter" fontSize="30" fontStyle="Bold" color="#ffa31a">Please have all players seated and click Start to begin.</Text>
<Text alignment="UpperCenter" fontSize="25" fontStyle="Bold" color="#ffff00" offsetXY="0 -33">Please consider rating this game on Steam workshop.</Text>
<Button icon="start" alignment="LowerCenter" onClick="prepareTable" color="" width="150" height="150"></Button>
</Panel>

<Panel id="ScoreSheetPanel" class="WindowBorder" width="260" height="305" rectAlignment="MiddleRight" showAnimation="Grow" visibility="nil">
    <TableLayout id="ScoreTable" class="ScoreTable">
        <Row id="ScoreRow1" class="ScoreTableRow"  dontUseTableRowBackground="true" visibility="nil" color="" outline="" outlineSize="5 5">
            <Cell>
                <Text id="playerID1">Player 1</Text>
            </Cell>
            <Cell>
                <Text id="playerScore1">0</Text>
            </Cell>
        </Row>
        <Row id="ScoreRow2" class="ScoreTableRow"  dontUseTableRowBackground="true" visibility="nil" color="" outline="" outlineSize="5 5">
            <Cell>
                <Text id="playerID2">Player 2</Text>
            </Cell>
            <Cell>
                <Text id="playerScore2">0</Text>
            </Cell>
        </Row>
        <Row id="ScoreRow3" class="ScoreTableRow"  dontUseTableRowBackground="true" visibility="nil" color="" outline="" outlineSize="5 5">
            <Cell>
                <Text id="playerID3">Player 3</Text>
            </Cell>
            <Cell>
                <Text id="playerScore3">0</Text>
            </Cell>
        </Row>
        <Row id="ScoreRow4" class="ScoreTableRow"  dontUseTableRowBackground="true" visibility="nil" color="" outline="#FFFFFF" outlineSize="5 5">
            <Cell>
                <Text id="playerID4">Player 4</Text>
            </Cell>
            <Cell>
                <Text id="playerScore4">0</Text>
            </Cell>
        </Row>
    </TableLayout>
</Panel>

